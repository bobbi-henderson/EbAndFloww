<%- include('partials/header') %>

    <div class="containter mt-2">
        <div class="row justify-content-center mr-0">
            <div class="col-11 col-sm-10 col-md-7 col-lg-5">
                <h1>Add Blog Post</h1>
                <form action="/blog/addPost" enctype="multipart/form-data" method="POST" id="newArt" class="p-3">
                    <div class="form-group mx-2">
                        <label for="title" class="">Post Title</label>
                        <input type="text" name="title" id="title" class="form-control" required>
                    </div>
                    <div class="form-group mx-2"> 
                        <label for="file" class="">Post Photo</label>
                        <input type="file" name="file" id="file" class="form-control" required>
                    </div>
                    <div class="form-group mx-2">
                        <label for="body" class="">Blog Body</label>
                        <textarea name="body" id="body" cols="30" rows="10" class="form-control" required></textarea>
                    </div>
                    <div class="form-group mx-2">
                        <label for="link" class="">Related Links (separate with a comma , )</label>
                        <input type="text" name="link" id="link" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-outline-light">Submit</button>
                  </form>
            </div>
        </div>
    </div>



<%- include('partials/footer') %>