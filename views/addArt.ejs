<%- include('partials/header') %>

    <div class="containter">
        <div class="row justify-content-center mr-0">
            <div class="col-11 col-sm-10 col-md-7 col-lg-5">
                <h1>Add Art</h1>
                <form action="/art/addArt" enctype="multipart/form-data" method="POST" id="newArt" class="p-3">
                    <div class="form-group mx-2">
                        <label for="name" class="">Name of Piece</label>
                        <input type="text" name="name" id="name" class="form-control" required>
                    </div>
                    <div class="form-group mx-2"> 
                        <label for="files" class="">Art Photo</label>
                        <input type="file" name="files" id="files" class="form-control" multiple required>
                    </div>
                    <div class="form-group mx-2">
                        <label for="desc" class="">Description of the Piece</label>
                        <textarea name="desc" id="desc" cols="30" rows="10" class="form-control" required></textarea>
                    </div>
                    <div class="form-group mx-2">
                        <label for="link" class="">Etsy Link</label>
                        <input type="text" name="link" id="link" class="form-control">
                    </div>
                    <div class="form-group mx-2">
                        <label for="price" class="">Price</label>
                        <input type="number" name="price" id="price" class="form-control">
                    </div>
                    <div class="form-group mx-2">
                        <label for="check" class="pr-2">Has this piece been sold?</label>
                        <div class="form-check form-check-inline" id="check">
                            <input type="checkbox" name="sold" id="sold" class="form-check-input">
                            <label for="sold" class="form-check-label">Yes</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-light">Submit</button>
                  </form>
            </div>
        </div>
    </div>



<%- include('partials/footer') %>