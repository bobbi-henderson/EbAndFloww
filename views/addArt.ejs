<%- include('partials/header') %>

<div class="containter">
    <div class="row justify-content-center">
        <div class="col-11 col-sm-8 col-md-7 col-lg-4">
            <h1>Login</h1>
            <form action="/art/addArt" enctype="multipart/form-data" method="POST" id="newArt" class="p-3">
                <div class="form-group mx-2">
                    <label for="name" class="">Name of Piece</label>
                    <input type="text" name="name" id="name" class="form-control">
                </div>
                <div class="form-group mx-2"> 
                    <label for="image" class="">Art Photo</label>
                    <input type="file" name="image" id="image" class="form-control">
                </div>
                <div class="form-group mx-2">
                    <label for="desc" class="">Description of the Piece</label>
                    <textarea name="desc" id="desc" cols="30" rows="10"></textarea>
                </div>
                <div class="form-group mx-2">
                    <label for="check" class="pr-2">Has this piece been sold?</label>
                    <div class="form-check form-check-inline" id="check">
                        <input type="checkbox" name="sold" id="sold" class="form-check-input">
                        <label for="sold" class="form-check-label">Yes</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-light">Submit</button>
              </form>
        </div>
    </div>
</div>


<%- include('partials/footer') %>